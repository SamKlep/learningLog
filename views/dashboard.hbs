<h6>Dashboard</h6>
<h3>Welcome, {{name}}</h3>
<p>Here are your logs</p>
{{#if logs}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each logs}}
                <tr>
                    <td><a href="/logs/{{_id}}"></a>{{title}}</td>
                    <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
<p>You have not created any stories</p>
{{/if}}